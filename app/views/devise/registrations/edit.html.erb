<h2 class="text-center devise">Usu√°rio</h2>
<div class="devise card-body">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :nome, required: true %>
    <%= f.input :login, required: true %>
    <%= f.input :data_nascimento, required: true %>


    <%= f.input :password, hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Atualizar" %>
  </div>
<% end %>

<%= link_to "Cancele sua conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, class: "btn btn-outline-light btn-sm" %>
<br>
<%= link_to "Back", :back, class: "btn btn-outline-light btn-sm" %>

</div>
